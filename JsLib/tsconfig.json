{
    "compilerOptions": {
        "strict": false,
        "target": "ESNext",
        "module": "ESNext",
        "moduleResolution": "node",
        "experimentalDecorators": true,
        "strictNullChecks": false,
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "outDir": "tmp",
        "noEmitOnError": true,
        "skipLibCheck": true,
        "sourceMap": true
    },
    "include": ["src"],
    "exclude": ["node_modules"]
}
